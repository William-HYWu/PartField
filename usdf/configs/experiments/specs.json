{
    "Description": [
        "This experiment learns a shape representation for mugs ",
        "using data from ShapeNet version 2."
    ],
    "NetworkSpecs": {
        "dims": [
            512,
            512,
            512,
            512,
            512,
            512,
            512,
            512
        ],
        "activation": "silu",
        "norm_style": "batch",
        "norm_mode": "post",
        "residual": false,
        "dropout": false,
        "dropout_prob": 0.2,
        "weight_norm": true
    },
    "CodeLength": 128,
    "NumEpochs": 10001,
    "SnapshotFrequency": 1000,
    "AdditionalSnapshots": [
        100,
        500
    ],
    "LearningRateSchedule": [
        {
            "Type": "Step",
            "Initial": 0.0005,
            "Interval": 500,
            "Factor": 0.5
        },
        {
            "Type": "Step",
            "Initial": 0.001,
            "Interval": 500,
            "Factor": 0.5
        }
    ],
    "SamplesPerScene": 16384,
    "ScenesPerBatch": 1,
    "DataLoaderThreads": 16,
    "ClampingDistance": 0.1,
    "CodeRegularization": true,
    "CodeRegularizationLambda": 1e-4,
    "CodeBound": 1.0
}